<%= form_with(model: @article, local: true) do |form| %>

    <div class="field">
        <%=form.label :Titulo %>
        <%=form.text_field :title, class: 'form-control' %>
    </div>
    
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.rich_text_area :content, class: 'form-control' %>
    </div>
  
    <div class="row">
			<div class="field">
        <% @categories.each do |category| %>
            <label class="col-6  col-sm-4">
							<%= form.check_box :category_elements, {multiple: true}, category.id, nil %>
              <%= category.title %>
            </label>
        <%end%>
      </div>
    </div>

    <%=form.submit :"Actualizar articulo", class: "btn btn-primary" %>
        
<%end%>